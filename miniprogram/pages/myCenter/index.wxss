.page {
  width: auto;
  height: auto;
}

/* 顶部头像 */
.header-info {
  height: auto;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background-image: linear-gradient( #3963BC, #14b9de);
}
.header-myinfo {
  width: 200rpx;
  height: 200rpx;
}
.header-info-pic {
  display: block;
  width: 140rpx;
  height: 140rpx;
  position: relative;
  top: 30rpx;
  left: 30rpx;
  border-radius: 100%;
}
.header-info-text {
  /* width: 260rpx; */
  text-align: left;
  color: aliceblue;
}
.header-info-name {
  font-size: 36rpx;
  font-weight: 500;
  display: block;
  margin-top: 42rpx;
  text-align: center;
  padding: 10rpx;
}
.refresh-info {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 9rpx;
  left: 16rpx;
}
.header-info-unlogin {
  color: aliceblue;
  font-size: 32rpx;
  font-weight: 400;
  display: block;
  position: relative;
  left: -5rpx;
  margin-top: 5rpx;
  border:5rpx solid aliceblue;
  border-radius: 25rpx;
  text-align: center;
  padding-bottom: 5rpx;
  line-height: 1.5;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.header-info-islogin {
  display: block;
  position: absolute;
  margin-left: 6rpx;
  font-size: 32rpx;
  font-weight: 500;
}
/* 中间的几列菜单 */
.wrp-menu {
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  height: 300rpx;
  margin-top: 35rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  border:1rpx solid white;
  border-radius: 20rpx;
  background-color: white;
  position: relative;
}
/* 菜单里面的分类小标题 */
.wrp-menu-header {
  width: 100%;
  height: 90rpx;
  border-bottom: 5rpx solid rgb(241, 241, 241);
  position: absolute;
}
.wrp-menu-icon {
  display: block;
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  top: 23rpx;
  left: 30rpx;
}
.wrp-menu-text {
  display: block;
  width: 250rpx;
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  position: absolute;
  top: 20rpx;
  left: 100rpx;
  line-height: 50rpx;
}
/* 菜单里面的分类具体图标和内容 */
.wrp-menu-contaier {
  display: flex;
  justify-content: normal;
  flex-wrap: wrap;
  height: 210rpx;
  position:absolute;
  top: 90rpx;
  width: 100%;
}
.wrp-menu-content {
  display: flex;
  justify-content: center;
  height: 210rpx;
  width: 25%;
}
.menulist-icon {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 40rpx;
}
.menulist-text {
  display: block;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight: 500;
  color: #000000;
  position:absolute;
  top: 130rpx;
}

/* 底部说明 */
.footer-info {
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  color: gray;
}
