.tab-bar {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	height: 125rpx;
	box-sizing: border-box;
	background-color: #ffffff;
	border-top: 1rpx solid #d7d7d7;
	z-index: 10000;
	box-shadow: 0px -6px 20px -15px rgba(0, 0, 0, 0.4);
}
.tab-bar .tab-bar-item {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
	position: absolute;
	bottom: 0;
	height: 108rpx;
}
.tab-bar .tab-bar-item:nth-child(1) {
	left: 60rpx;
}
.tab-bar .tab-bar-item:nth-child(2) {
	left: 222rpx;
}
.tab-bar .tab-bar-item:nth-child(3) {
	right: 238rpx;
}
.tab-bar .tab-bar-item:nth-child(4) {
	right: 60rpx;
}
.tab-bar .tab-bar-item:nth-child(1) .icon {
	width: 60rpx;
}
.tab-bar .tab-bar-item:nth-child(2) .icon {
	width: 60rpx;
}
.tab-bar .tab-bar-item:nth-child(3) .icon {
	width: 60rpx;
}
.tab-bar .tab-bar-item:nth-child(4) .icon {
	width: 60rpx;
}
.tab-bar .tab-bar-item .text-label {
	font-size: 26rpx;
	width: 110rpx;
	text-align: center;
	height: 46rpx;
}
